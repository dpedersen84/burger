<h1 class="headline">Burger Muncher!</h1>
    <img src="/assets/img/1.png" alt="burger">

<div class="row">
    <div class="col-md-4">
        <form class="add-form">
            <div class="form-group">
                <label for="burg">Add a Burger!</label>
                <input type="text" id="burg" class="form-control" name="burger_name">
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>    
</div>
<div class="row">
    <div class="col-md-6">      
    <h2>Burgers to Munch!</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">    
    <h2>Burgers Munched!</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/if}}    
            {{/each}}
        </ul>
    </div>      
</div>


